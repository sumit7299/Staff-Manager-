        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/staffprofileimage"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginStart="8dp"
            android:src="@color/purple_main"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/stafffirstname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:text="TextView"
            android:textColor="@color/black"
            android:textSize="@dimen/_14sdp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/staffmonumber"
            app:layout_constraintStart_toEndOf="@+id/staffprofileimage"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/staffmonumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="8dp"
            android:text="TextView"
            android:textSize="@dimen/_12sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/staffprofileimage"
            app:layout_constraintTop_toBottomOf="@+id/stafffirstname" />

        <ImageView
            android:id="@+id/staffcall"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_icon_call" />

        <ImageView
            android:id="@+id/staffwhatsapp"
            android:layout_width="25dp"
            android:layout_height="30dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintBottom_toBottomOf="@+id/staffcall"
            app:layout_constraintEnd_toStartOf="@+id/staffcall"
            app:layout_constraintTop_toTopOf="@+id/staffcall"
            app:srcCompat="@drawable/ic_icon_whatsapp_purple" />

        <TextView
            android:id="@+id/stafflastname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:text="TextView"
            android:textColor="@color/black"
            android:textSize="@dimen/_14sdp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/stafffirstname"
            app:layout_constraintStart_toEndOf="@+id/stafffirstname"
            app:layout_constraintTop_toTopOf="@+id/stafffirstname" />

        <TextView
            android:id="@+id/profilelogo"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:elevation="@dimen/_2sdp"
            android:gravity="center"
            android:text="A"
            android:textColor="@color/white"
            android:textSize="@dimen/_22sdp"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="@+id/staffprofileimage"
            app:layout_constraintEnd_toEndOf="@+id/staffprofileimage"
            app:layout_constraintStart_toStartOf="@+id/staffprofileimage"
            app:layout_constraintTop_toTopOf="@+id/staffprofileimage" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:background="#4d4d4e"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>
